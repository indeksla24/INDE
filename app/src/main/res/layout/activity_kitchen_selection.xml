<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Kitchen_Selection"
        android:background="@color/theme">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/room_type_selection_heroline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:text="FINAL STEP"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/room_type_selection_heroline_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Kitchen Style As Your Choice..."
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="5"
                        android:columnCount="2"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bedroom1"
                            android:textColor="@color/btn_text_color"
                            android:drawableTop="@drawable/bedroom"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:gravity="center"
                            android:background="@drawable/border_big_button" />

                        <Button
                            android:id="@+id/bedroom2"
                            android:textColor="@color/btn_text_color"
                            android:drawableTop="@drawable/bedroom"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:gravity="center"
                            android:background="@drawable/border_big_button"
                            />

                        <Button
                            android:id="@+id/bedroom3"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/border_big_button"
                            android:drawableTop="@drawable/bedroom"
                            android:gravity="center"
                            android:textColor="@color/btn_text_color" />

                        <Button
                            android:id="@+id/bedroom4"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/border_big_button"
                            android:drawableTop="@drawable/bedroom"
                            android:gravity="center"
                            android:textColor="@color/btn_text_color" />

                        <Button
                            android:id="@+id/bedroom5"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/border_big_button"
                            android:drawableTop="@drawable/bedroom"
                            android:gravity="center"
                            android:textColor="@color/btn_text_color" />

                        <Button
                            android:id="@+id/bedroom6"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/border_big_button"
                            android:drawableTop="@drawable/bedroom"
                            android:gravity="center"
                            android:textColor="@color/btn_text_color" />

                        <Button
                            android:id="@+id/bedroom7"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/border_big_button"
                            android:drawableTop="@drawable/bedroom"
                            android:gravity="center"
                            android:textColor="@color/btn_text_color" />

                        <Button
                            android:id="@+id/bedroom8"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/border_big_button"
                            android:drawableTop="@drawable/bedroom"
                            android:gravity="center"
                            android:textColor="@color/btn_text_color" />

                        <Button
                            android:id="@+id/bedroom9"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/border_big_button"
                            android:drawableTop="@drawable/bedroom"
                            android:gravity="center"
                            android:textColor="@color/btn_text_color" />

                        <Button
                            android:id="@+id/bedroom10"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/border_big_button"
                            android:drawableTop="@drawable/bedroom"
                            android:gravity="center"
                            android:textColor="@color/btn_text_color" />
                    </GridLayout>
                </ScrollView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

