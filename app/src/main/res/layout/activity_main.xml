<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/ivory"
    >

        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="914dp"
                android:orientation="vertical">

                <!--                <ImageView-->
                <!--                    android:layout_width="200dp"-->
                <!--                    android:layout_height="200dp"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:background="@drawable/heroimage" />-->
                <!--                -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:layout_marginLeft="-170sp"
                        android:layout_marginTop="-200sp"
                        android:background="@drawable/header_circle_light" />

                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:layout_marginLeft="-200sp"
                        android:layout_marginTop="-300sp"
                        android:background="@drawable/header_circle_ultralight"
                        android:clickable="false" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/login_heroline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:fontWeight="700"
                        android:text="WELCOME BACK"
                        android:textColor="@color/gray_blue"
                        app:layout_constraintBottom_toTopOf="@+id/login_heroline"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/login_heroline_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Account Log In"
                        android:textColor="@color/blue_dark4"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/login_email_label"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginStart="4dp"-->
                    <!--                        android:text="Email Address" />-->

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:drawableLeft="@drawable/person"
                        android:drawablePadding="10dp"
                        android:hint="Enter your Email"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/login_password_label"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginStart="4dp"-->
                    <!--                        android:text="Enter your Password" />-->

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="20dp"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="10dp"
                        android:hint="Enter your Password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/log_in_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@color/blue_dark3"
                        android:text="Log In" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Or Log In Using Email"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/register_login_with_google"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitCenter"
                            android:background="@drawable/google"
                            android:layout_marginEnd="30dp"
                            />
                        <ImageButton
                            android:id="@+id/register_login_with_apple"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:alpha=".9"
                            android:scaleType="fitCenter"
                            android:background="@drawable/apple"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="70dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an Account?" />

                    <Button
                        android:id="@+id/register_button"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/blue_dark5"
                        android:text="Register"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>