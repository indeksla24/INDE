                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/sofa_6"
                                />
                            <Button
                                android:id="@+id/sofa6_button"
                                android:text="VIEW"
                                android:textSize="12dp"
                                android:textColor="@color/btn_text_color"
