<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Room_Type_Selection"
    android:background="@color/theme">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-143dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/room_type_selection_heroline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:text="WELCOME USER"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/room_type_selection_heroline_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What would you like to add to the project?"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/bedroom_button"
                    android:text="Bedroom"
                    android:textSize="12dp"
                    android:textColor="@color/btn_text_color"
                    android:drawableTop="@drawable/bedroom"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/border_big_button"
                    />


                <Button
                    android:id="@+id/bathroom_button"
                    android:text="Bathroom"
                    android:textSize="12dp"
                    android:textColor="@color/btn_text_color"
                    android:drawableTop="@drawable/bathroom"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    android:gravity="center"
                    android:background="@drawable/border_big_button"
                    />
                <Button
                    android:id="@+id/kitchen_button"
                    android:text="Kitchen"
                    android:textSize="12dp"
                    android:textColor="@color/btn_text_color"
                    android:drawableTop="@drawable/kitchen"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    android:gravity="center"
                    android:background="@drawable/border_big_button"
                    />
                <Button
                    android:id="@+id/dining_button"
                    android:text="Dining"
                    android:textSize="12dp"
                    android:textColor="@color/btn_text_color"
                    android:drawableTop="@drawable/dining_room"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    android:gravity="center"
                    android:background="@drawable/border_big_button"

                    />


            </GridLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/item_selection"
                    android:text="Tap to show items in your ROOM"
                    android:textSize="12dp"
                    android:backgroundTint="@color/my_secondary_btn_color"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>