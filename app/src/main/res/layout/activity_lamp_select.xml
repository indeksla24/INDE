<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lamp_select">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-143dp"
            tools:layout_editor_absoluteY="0dp"
            android:orientation="horizontal">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="30dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="1"
                        android:layout_gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:background="@drawable/lamp_1" />

                            <Button
                                android:id="@+id/lamp1_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:background="@drawable/border_big_button"
                                android:gravity="center"
                                android:onClick="lamp1_buttonARView"
                                android:text="VIEW"
                                android:textColor="@color/btn_text_color"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/lamp_2"
                                />
                            <Button
                                android:id="@+id/lamp2_button"
                                android:text="VIEW"
                                android:textSize="12dp"
                                android:textColor="@color/btn_text_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:background="@drawable/border_big_button"
                                android:onClick="lamp2_buttonARView"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/lamp_3"
                                />
                            <Button
                                android:id="@+id/lamp3_button"
                                android:text="VIEW"
                                android:textSize="12dp"
                                android:textColor="@color/btn_text_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:background="@drawable/border_big_button"
                                android:onClick="lamp3_buttonARView"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/lamp_4"
                                />
                            <Button
                                android:id="@+id/lamp4_button"
                                android:text="VIEW"
                                android:textSize="12dp"
                                android:textColor="@color/btn_text_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:background="@drawable/border_big_button"
                                android:onClick="lamp4_buttonARView"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/lamp_5"
                                />
                            <Button
                                android:id="@+id/lamp5_button"
                                android:text="VIEW"
                                android:textSize="12dp"
                                android:textColor="@color/btn_text_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:background="@drawable/border_big_button"
                                android:onClick="lamp5_buttonARView"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/lamp_6"
                                />
                            <Button
                                android:id="@+id/lamp6_button"
                                android:text="VIEW"
                                android:textSize="12dp"
                                android:textColor="@color/btn_text_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:background="@drawable/border_big_button"
                                android:onClick="lamp6_buttonARView"
                                />
                        </LinearLayout>

                    </GridLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>