<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <layer-list>
                <!-- Shadow effect -->
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="#ffffff" />
                        <corners android:radius="8dp" />
                        <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp" />
                    </shape>
                </item>
                <!-- Border and background -->
                <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
                    <shape android:shape="rectangle">
                        <solid android:color="#ffffff" />
                        <stroke android:width="2dp" android:color="#FF6200EE" />
                        <corners android:radius="8dp" />
                    </shape>
                </item>
            </layer-list>
        </item>

        <!-- Default state without shadow -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#ffffff" />
                <stroke android:width="2dp" android:color="#FF6200EE" />
                <corners android:radius="8dp" />
            </shape>
        </item>
</selector>